<div class="write-btn support-set">
  <%- if controller_name != 'sessions' %>
      <%= link_to "로그인", new_session_path(resource_name), class: "round-btn support-btn" %><br />  
  <% end -%>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "회원가입", new_registration_path(resource_name), class: "round-btn support-btn" %><br />
  <% end -%>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "비밀번호 찾기", new_password_path(resource_name), class: "round-btn back-btn" %><br />
  <% end -%>
  
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "계정 확인 이메일 다시 받기", new_confirmation_path(resource_name), class: "round-btn support-btn"  %><br />
  <% end -%>
  
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "잠금 해제 이메일 다시 받기", new_unlock_path(resource_name), class: "round-btn support-btn"  %><br />
  <% end -%>
  
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "#{OmniAuth::Utils.camelize(provider)}으로 로그인하기", omniauth_authorize_path(resource_name, provider), class: "round-btn support-btn"  %><br />
    <% end -%>
  <% end -%>
</div>