<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h2>로그인</h2>
    <hr />
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, label: "이메일", required: false, autofocus: true %>
        <%= f.input :password, label: "비밀번호", required: false %>
        <%= f.input :remember_me, label: "로그인 정보 기억", as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions write-btn">
        <%= f.button :submit, "로그인", class: "round-btn confirm-btn" %>
        <%= link_to "비밀번호 재설정", new_user_password_path, class: "round-btn support-btn" %>
      </div>
    <% end %>
    <!-- <%= render "devise/shared/links" %> -->
  </div>
</div>