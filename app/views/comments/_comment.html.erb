<div class="unit">
  <div class="text">
    <%= comment.content %>
  </div>
  <div class="detail row">
    <div class="col-xs-6 col-md-6">
      <span class="name"><%= comment.user.name %></span>
      <span class="time"><%= time_ago_in_words(comment.created_at) %> ì „</span>
    </div>
    <div class="col-xs-6 col-md-6 text-right">
      <% if user_signed_in? %>
        <% if comment.user_id == current_user.id %>
          <%= link_to "EDIT", edit_message_comment_path(comment.message, comment), class: 'edit' %>
          <%= link_to "DELETE", message_comment_path(comment.message, comment), method: :delete, data: { confirm: "Are you sure?"}, class: 'edit' %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
