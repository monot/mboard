<div class="row">
  <div class="col-xs-12 col-md-8 col-md-offset-2 write-comp">
    <h2>답글 수정</h2>
    <hr />
    <%= simple_form_for([@message, @comment]) do |f| %>
      <%= f.input :content, label: false, :input_html => {:rows => 10} %>
      <div class="write-btn">
        <%= f.button :submit, class: "round-btn confirm-btn" %>
      </div>
    <% end %>
  </div>
</div>
